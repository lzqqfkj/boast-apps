<h1>Listing companies</h1>
	
<table>
  <tr>
    <th>Companyid</th>
    <th>Siteid</th>
    <th>Telephone</th>
    <th>Pattern</th>
    <th>Companyname</th>
    <th>Introduction</th>
  </tr>

<% for company in @companies %>
  <tr>
    <td><%=h company.id %></td>
    <td><%=h company.website %></td>
    <td><%=h company.name %></td>
    <td><%=h company.pattern %></td>

    </tr>
<% end %>
</table>

