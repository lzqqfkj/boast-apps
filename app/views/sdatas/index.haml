
%table{:width=>"100%", :border=>"0", :align=>"center", :cellpadding=>"0", :cellspacing=>"0",:class=>"font05"}
  %tr
  
    %td{:width=>"20%",:height=>"35", :align=>"center", :valign=>"middle", :background=>"images/index_r1_c3.jpg"}
      ='Stype'
  
    %td{:width=>"20%",:height=>"35", :align=>"center", :valign=>"middle", :background=>"images/index_r1_c3.jpg"}
      ='Sid'
  
    %td{:width=>"25%",:height=>"35", :align=>"center", :valign=>"middle", :background=>"images/index_r1_c3.jpg"}
